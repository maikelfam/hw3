<h1> New Post </h1>
<%= form_with model: @post do |form| %>
    <%= form.label "title"%>
    <%= form.text_field "title"%>
    <%= form.label "posted_on"%>
    <%= form.date_field "posted_on"%>
    <%= form.label "description"%>
    <%= form.text_field "description"%>
    <%= form.hidden_field "company_id"%>
<p>
 <%= form.submit %>
</p>
<% end %>